{
  "name": "NYC Weather",
  "manifest_version": 1,
  "version": "0.1",
  "default_locale": "en",
  "description": "A weather app where users can get weather information in real-time.",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": [
           {
            "src": "icons/icon.png",
            "sizes": "512/512",
            "type": "image/png"
        }
   ],
  "short_name": "NYC Weather",
  "theme_color": "#2196f3",
  "background_color": "#2196f3",
  "display": "standalone",
  "scope": "/",
  "start_url": "/index.html"
}
